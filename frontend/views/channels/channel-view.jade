#messages-main.card
  .ms-body
    .listview.lv-message
      .lv-header-alt.clearfix
        #ms-menu-trigger(data-ng-class="{ 'open': mactrl.lvMenuStat }", data-ng-click='mactrl.lvMenuStat = (mactrl.lvMenuStat===true ? false : true )')
          .line-wrap
            .line.top
            .line.center
            .line.bottom
        .lvh-label.hidden-xs
          span.c-black \#{{::channel.name}}
        ul.lv-actions.actions
          li
            a(href='')
              i.mdi.mdi-delete
          li
            a(href='')
              i.mdi.mdi-check
          li
            a(href='')
              i.mdi.mdi-clock
          li
            a(href='')
              i.mdi.mdi-dots-vertical
      .lv-body
        chat-message(ng-repeat="message in messages", message="message")
      .clearfix
      chat-footer
