.emoji-chooser(ng-if="ctlr.visible")
  header Emoji matching "<strong>{{ctlr.emojiStart}}</strong>"
  section
    a.emoticon-info(ng-repeat="emoji in ctlr.emoticonList", 
      ng-click='ctlr.select(emoji)',
      ng-mouseover='ctlr.focusIndex = $index',
      ng-class='{selected: ctlr.focusIndex === $index}')
      esn-emoticon(emoticon="{{emoji}}")
      span.emoji-text
        span :
        span(ng-bind="emoji")
        span :
      
