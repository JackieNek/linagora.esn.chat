.lv-item.media.chat-message
    .lv-avatar.pull-left
        img(ng-src='/api/users/{{::message.user._id}}/profile/avatar', alt='')
    .media-body
      .chat-message-title
        span.displayname {{::message.user.displayName}}
        small.date {{::message.date}}
      .chat-message-text {{::message.text}}